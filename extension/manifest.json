{
  "manifest_version": 3,
  "name": "Text Extractor",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "scripting",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "Extract Text"
  },
  "options_page": "options.html",
  "browser_specific_settings": {
    "gecko": {
      "id": "text-extractor@example.com"
    }
  }
}
