{
  "manifest_version": 3,
  "name": "Text Extractor",
  "version": "1.0",
  "permissions": ["activeTab", "nativeMessaging", "scripting", "webNavigation"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_title": "Extract Text"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "text-extractor@example.com"
    }
  }
}
